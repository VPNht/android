<resources>

    <!-- Base application theme. -->
    <style name="Theme.VPNht" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorControlNormal">@color/background</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="spinnerStyle">@style/Theme.VPNht.Spinner</item>

        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.VPNht.Login" parent="Theme.VPNht">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryDark">@color/secondary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlNormal">@color/controls</item>

        <item name="spinnerStyle">@style/Theme.VPNht.Spinner</item>

        <item name="android:windowBackground">@color/secondary</item>
    </style>

    <style name="Theme.VPNht.SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/background</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme.VPNht.StartButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.VPNht.StopButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.VPNht.PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="Theme.VPNht.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorSwitchThumbNormal">@color/primary</item>
        <item name="android:colorForeground">@color/background</item>
    </style>

    <style name="Theme.VPNht.Spinner" parent="Base.Widget.AppCompat.Spinner.Underlined">

    </style>

</resources>